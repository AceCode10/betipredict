# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-a-secret-with: node -e \"console.log(require('crypto').randomBytes(32).toString('hex'))\""

# Football Data API (for live sports data & auto-resolution)
FOOTBALL_DATA_API_KEY=your_football_data_api_key_here

# Cron Secret (for automatic market resolution endpoint)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
CRON_SECRET=your_cron_secret_here

# Admin emails (comma-separated, for market resolution permissions)
ADMIN_EMAILS=admin@betipredict.com

# Airtel Money API (Zambia - Mobile Money payments)
# Sign up at https://developers.airtel.africa/signup
# Create an app at https://developers.airtel.africa/developer/register
AIRTEL_MONEY_CLIENT_ID=your_airtel_client_id_here
AIRTEL_MONEY_CLIENT_SECRET=your_airtel_client_secret_here
AIRTEL_MONEY_PIN=your_airtel_disbursement_pin_here
# Set to "production" for live payments, anything else for sandbox/staging
AIRTEL_MONEY_ENV=staging

# Blockchain (optional)
SEPOLIA_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
PRIVATE_KEY=your_metaMask_private_key_here
